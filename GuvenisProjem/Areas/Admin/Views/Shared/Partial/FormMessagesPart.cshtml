@using GuvenisProjem.Areas.Admin.Models.Types

@if (ViewBag.IslemDurum == 1)
{
    <div class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <i class="fa fa-upload"> &nbsp;<strong> Başarılı!<br /> </strong></i> @FormMessages.addsuccess
    </div>
}

else if (ViewBag.IslemDurum == 2)
{
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <i class="fa fa-warning"> &nbsp;<strong> Hata!<br /> </strong></i> @FormMessages.required
    </div>
}
