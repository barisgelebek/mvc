
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<GuvenisProjem.Areas.Admin.Models.DTO.ProjectImageVM>
<script src="~/scripts/custom/DeleteRecordTable.js"></script>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="glyphicon glyphicon-picture"></i> Proje Galerileri <small>Projelere ait resim galeri</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>*@
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-55">
                        <div class="thumbnail">
                            ,                       <div class="image view view-first">
                                <img style="width: 100%; display: block;" src="~/Areas/Admin/Content/Site/images/project/@item.PostImage" alt="@item.ProjectTitle" />
                                <div class="mask">
                                    <p>@item.Name</p>
                                    <div class="tools tools-bottom">
                                        <a href="#"><i class="fa fa-link"></i></a>
                                        <a href="#"><i class="fa fa-pencil"></i></a>
                                        <button type="button" class="btn btn-danger" onclick="Delete('/Admin/ProjectImage/DeleteProjectImage/,@item.ID)">Sil</button>
                                    </div>
                                </div>
                            </div>
                            <div class="caption">
                                <p>@Html.Raw(item.Description)</p>
                            </div>
                            Projesi: @item.ProjectTitle
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
