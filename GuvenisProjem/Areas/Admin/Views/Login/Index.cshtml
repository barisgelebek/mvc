
@{
    Layout = null;
}
@model GuvenisProjem.Areas.Admin.Models.DTO.LoginModel

<!DOCTYPE html>

<html lang="tr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yönetim Paneli | Giriş</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Admin/Content/css/custom.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/fonts/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/animate.min.css" rel="stylesheet">
    <!-- Custom styling plus plugins -->
    <link href="~/Areas/Admin/Content/css/custom.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/css/icheck/flat/green.css" rel="stylesheet">
    <script src="~/scripts/jquery.min.js"></script>
    <!--[if lt IE 9]>
          <script src="~/scripts/ie8-responsive-file-warning.js"></script>
          <![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
          <![endif]-->
    <style>
        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body style="background:#F7F7F7;">
    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>
        <div id="wrapper">
            <div id="login" class="animate form">
                <section class="login_content">
                    @using (Html.BeginForm("Index", "Login"))
                    {

                        <h1>Yönetim paneli girişi</h1>
                        @Html.ValidationSummary()
                        <div>
                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", type = "email", placeholder = "EMail" })
                            @*@Html.ValidationMessageFor(x => x.EMail)*@
                        </div>
                        <div>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                            @*@Html.ValidationMessageFor(x=> x.Password)*@
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success submit">Giriş Yap</button>
                            @*<a class="reset_pass" href="#">Şifremi unuttum !</a>*@
                        </div>
                        <div>
                            <a class="btn btn-default" href="#toregister">&nbsp;&nbsp; Kayıt Ol &nbsp;&nbsp;</a>
                        </div>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                @*<h1><i class="fa fa-paw" style="font-size: 26px;"></i> barisgelebek</h1>*@
                                <p>©2017 Her hakkı saklıdır. | Tasarım <a href="http://www.barisgelebek.com">Barış Gelebek</a></p>
                            </div>
                    }
                    <!-- form -->
                </section>
                <!-- content -->
            </div>
            <div id="register" class="animate form">
                <section class="login_content">
                    <form>
                        <h1>Hesap Oluştur</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" required="" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="E-Mail" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Şifre" required="" />
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success submit">Kaydet</button>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                Zeten üye misiniz ?<br />
                                <a class="btn btn-default" href="#tologin">&nbsp;&nbsp; Giriş Yap &nbsp;&nbsp;</a>

                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                @*<h1><i class="fa fa-paw" style="font-size: 26px;"></i> barisgelebek</h1>*@
                                <p>©2017 Her hakkı saklıdır. | Tasarım <a href="http://www.barisgelebek.com">Barış Gelebek</a></p>
                            </div>
                        </div>
                    </form>
                    <!-- form -->
                </section>
                <!-- content -->
            </div>
        </div>
    </div>
</body>
</html>
